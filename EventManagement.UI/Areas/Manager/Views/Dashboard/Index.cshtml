@{
    ViewData["Title"] = "Yönetici Paneli";
    Layout = "_LayoutAdmin";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Yönetici Gösterge Paneli</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Etkinlik Raporu
    </a>
</div>

<div class="row">
    <!-- Toplam Etkinlik Kartı -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Etkinliklerim</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">12</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toplam Kayıt Kartı -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Toplam Katılımcı</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">156</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Aktif Etkinlik Kartı -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Aktif Etkinlik</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">4</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Onay Bekleyen Kartı -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Onay Bekleyen</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">8</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Etkinliklerim -->
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Etkinliklerim</h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                        data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                        aria-labelledby="dropdownMenuLink">
                        <div class="dropdown-header">Etkinlik İşlemleri:</div>
                        <a class="dropdown-item" href="#">Yeni Etkinlik</a>
                        <a class="dropdown-item" href="#">Tüm Etkinlikleri Listele</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Raporlama</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Etkinlik Adı</th>
                                <th>Tarih</th>
                                <th>Konum</th>
                                <th>Kayıt</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Dijital Pazarlama Günleri</td>
                                <td>12-13.05.2024</td>
                                <td>İstanbul</td>
                                <td>45/100</td>
                                <td><span class="badge bg-success">Aktif</span></td>
                                <td>
                                    <a href="#" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="#" class="btn btn-info btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td>Mobil Uygulama Geliştirme Workshop</td>
                                <td>25.06.2024</td>
                                <td>Ankara</td>
                                <td>18/30</td>
                                <td><span class="badge bg-warning">Onay Bekliyor</span></td>
                                <td>
                                    <a href="#" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="#" class="btn btn-info btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td>Front-end Teknolojileri Semineri</td>
                                <td>15.07.2024</td>
                                <td>İzmir</td>
                                <td>15/40</td>
                                <td><span class="badge bg-primary">Hazırlık</span></td>
                                <td>
                                    <a href="#" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="#" class="btn btn-info btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Gelecek Etkinlikler -->
    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Yaklaşan Etkinlikler</h6>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">Dijital Pazarlama Günleri</h6>
                            <small class="text-muted">3 gün sonra</small>
                        </div>
                        <p class="mb-1">12-13 Mayıs 2024, İstanbul</p>
                        <small class="text-success">Kayıtlar devam ediyor</small>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">Veri Bilimi Konferansı</h6>
                            <small class="text-muted">1 hafta sonra</small>
                        </div>
                        <p class="mb-1">20 Mayıs 2024, Online</p>
                        <small class="text-warning">Son 10 kontenjan</small>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">UX/UI Tasarım Atölyesi</h6>
                            <small class="text-muted">2 hafta sonra</small>
                        </div>
                        <p class="mb-1">28 Mayıs 2024, İstanbul</p>
                        <small class="text-danger">Kontenjan dolmak üzere!</small>
                    </a>
                </div>
            </div>
            <div class="card-footer">
                <a href="#" class="btn btn-primary btn-sm btn-block">Tüm Etkinlikleri Görüntüle</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Kayıt İstatistikleri -->
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Kayıt İstatistikleri (Son 6 ay)</h6>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="registrationChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Kayıt istatistikleri grafiği
            var ctx = document.getElementById('registrationChart');
            var myLineChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran"],
                    datasets: [{
                        label: "Katılımcı Sayısı",
                        lineTension: 0.3,
                        backgroundColor: "rgba(78, 115, 223, 0.05)",
                        borderColor: "rgba(78, 115, 223, 1)",
                        pointRadius: 3,
                        pointBackgroundColor: "rgba(78, 115, 223, 1)",
                        pointBorderColor: "rgba(78, 115, 223, 1)",
                        pointHoverRadius: 5,
                        pointHoverBackgroundColor: "rgba(78, 115, 223, 1)",
                        pointHoverBorderColor: "rgba(78, 115, 223, 1)",
                        pointHitRadius: 10,
                        pointBorderWidth: 2,
                        data: [15, 25, 35, 42, 56, 68],
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
} 