@model EventManagement.UI.Models.Tenant.TenantViewModel
@{
    ViewData["Title"] = "Tenant Detayları";
}

<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-0">@ViewData["Title"]</h1>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tenant Adı</label>
                        <p>@Model.Name</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Alt Alan Adı</label>
                        <p>@Model.Subdomain</p>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">İletişim E-postası</label>
                        <p>@Model.ContactEmail</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">İletişim Telefonu</label>
                        <p>@Model.ContactPhone</p>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Açıklama</label>
                <p>@Model.Description</p>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Durum</label>
                        @if (Model.IsActive)
                        {
                            <p><span class="badge bg-success">Aktif</span></p>
                        }
                        else
                        {
                            <p><span class="badge bg-danger">Pasif</span></p>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Oluşturulma Tarihi</label>
                        <p>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
            </div>
        </div>
    </div>
</div> 