@model List<EventManagement.UI.Models.DTOs.EventDto>
@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <div class="jumbotron">
                <h1 class="display-4">Etkinlik Yönetim Sistemi</h1>
                <p class="lead">
                    Bu platform, organizasyonların (tenant) etkinliklerini yönetmelerine, katılımcıların etkinliklere kayıt olmalarına ve katılım durumunu takip etmelerine olanak tanır.
                </p>
                <hr class="my-4">
                <p>Hemen aşağıdaki yaklaşan etkinliklere göz atın veya tüm etkinlikleri görüntüleyin.</p>
                <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Event")" role="button">Tüm Etkinlikler</a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <h2>Yaklaşan Etkinlikler</h2>
            <hr />
            
            @if (Model != null && Model.Count > 0)
            {
                <div class="row">
                    @foreach (var eventItem in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@eventItem.Title</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">@eventItem.StartDate.ToString("dd.MM.yyyy HH:mm")</h6>
                                    <p class="card-text">@(eventItem.Description?.Length > 100 ? eventItem.Description.Substring(0, 100) + "..." : eventItem.Description)</p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            <i class="bi bi-geo-alt"></i> @eventItem.Location
                                        </small>
                                    </p>
                                    @if (eventItem.Capacity.HasValue)
                                    {
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <i class="bi bi-people"></i> @eventItem.RegistrationCount / @eventItem.Capacity
                                            </small>
                                        </p>
                                    }
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <a href="@Url.Action("Details", "Event", new { id = eventItem.Id })" class="btn btn-sm btn-outline-primary">Detaylar</a>
                                        <a href="@Url.Action("Register", "Event", new { id = eventItem.Id })" class="btn btn-sm btn-success">Kayıt Ol</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Şu anda yaklaşan etkinlik bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>
