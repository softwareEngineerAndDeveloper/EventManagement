@model EventManagement.UI.DTOs.EventStatisticsDto
@using EventManagement.UI.DTOs
@{
    ViewData["Title"] = "Etkinlik İstatistikleri";
    var eventTitle = ViewData["EventTitle"] as string;
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="my-4">@eventTitle - İstatistikler</h1>
        <a asp-controller="Event" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Etkinlik Detaylarına Dön
        </a>
    </div>
    
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">Toplam Katılımcı</h5>
                            <h2 class="mb-0 mt-2">@Model.TotalRegistrations</h2>
                        </div>
                        <div class="rounded-circle bg-primary-light p-3">
                            <i class="bi bi-people fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">Onaylı Katılımcı</h5>
                            <h2 class="mb-0 mt-2">@Model.ConfirmedRegistrations</h2>
                        </div>
                        <div class="rounded-circle bg-success-light p-3">
                            <i class="bi bi-check-circle fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-dark mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">Bekleme Listesi</h5>
                            <h2 class="mb-0 mt-2">@(Model.WaitingRegistrations)</h2>
                        </div>
                        <div class="rounded-circle bg-warning-light p-3">
                            <i class="bi bi-hourglass-split fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">İptal Edilen</h5>
                            <h2 class="mb-0 mt-2">@Model.CancelledRegistrations</h2>
                        </div>
                        <div class="rounded-circle bg-danger-light p-3">
                            <i class="bi bi-x-circle fs-1"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Kapasite Doluluk Oranı -->
    <div class="row">
        <div class="col-xl-8">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-bar-chart me-1"></i>
                    Kapasite Doluluk Oranı
                </div>
                <div class="card-body">
                    <div class="progress" style="height: 30px;">
                        <div class="progress-bar" role="progressbar" style="width: @Model.FillRate%;" 
                             aria-valuenow="@Model.FillRate" aria-valuemin="0" aria-valuemax="100">
                            @Model.FillRate.ToString("0.0")%
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <small>0%</small>
                        <small>100%</small>
                    </div>
                    <div class="mt-3">
                        <p><strong>Maksimum Kapasite:</strong> @(Model.MaxCapacity?.ToString() ?? "Sınırsız")</p>
                        <p><strong>Kalan Kapasite:</strong> @Model.AvailableCapacity</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-info-circle me-1"></i>
                    Etkinlik Bilgileri
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <p class="mb-0"><strong>Etkinlik ID:</strong></p>
                                    <p class="text-muted">@Model.EventId</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <a asp-controller="Admin" asp-action="Events" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-list-ul"></i> Tüm Etkinlikleri Göster
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Doluluk oranına göre renk değiştirme
            const fillRate = @Model.FillRate;
            const progressBar = $('.progress-bar');
            
            if (fillRate >= 90) {
                progressBar.addClass('bg-danger');
            } else if (fillRate >= 75) {
                progressBar.addClass('bg-warning');
            } else if (fillRate >= 50) {
                progressBar.addClass('bg-success');
            } else {
                progressBar.addClass('bg-info');
            }
        });
    </script>
} 