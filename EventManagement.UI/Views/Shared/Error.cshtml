@model EventManagement.UI.Models.Shared.ErrorViewModel
@{
    ViewData["Title"] = Model.Title;
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        @if (Model.StatusCode == 404)
                        {
                            <i class="fas fa-search fa-4x text-primary mb-3"></i>
                        }
                        else if (Model.StatusCode == 401 || Model.StatusCode == 403)
                        {
                            <i class="fas fa-lock fa-4x text-warning mb-3"></i>
                        }
                        else
                        {
                            <i class="fas fa-exclamation-triangle fa-4x text-danger mb-3"></i>
                        }
                        
                        <h1 class="h3 mb-2">@Model.Title</h1>
                        <p class="text-muted mb-4">@Model.Message</p>
                        
                        @if (Model.StatusCode != 0)
                        {
                            <p class="small text-muted">Hata Kodu: @Model.StatusCode</p>
                        }
                    </div>

                    <div>
                        <a href="/" class="btn btn-primary px-4">Ana Sayfaya Dön</a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary px-4 ms-2">Geri Dön</a>
                    </div>
                    
                    @if (Model.ShowRequestId && Context.Request.Cookies.ContainsKey("IsDebugEnabled"))
                    {
                        <div class="mt-5 pt-3 border-top">
                            <p class="small text-muted mb-0">
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
