<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Etkinlik Yönetimi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.4/datatables.min.css" rel="stylesheet" />
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="#">
            <i class="bi bi-calendar-check me-2"></i>
            Etkinlik Yönetimi
        </a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
            <i class="bi bi-list"></i>
        </button>
        
        <!-- Search Bar -->
        <div class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Ara..." aria-label="Ara..." aria-describedby="btnNavbarSearch" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="bi bi-search"></i></button>
            </div>
        </div>
        
        <!-- Navbar Right Items-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4 align-items-center">
            <!-- Dark Mode Toggle -->
            <li class="nav-item me-3">
                <label class="dark-mode-toggle mb-0">
                    <input type="checkbox" id="darkModeToggle">
                    <span class="slider"></span>
                </label>
            </li>
            
            <!-- Notifications -->
            <li class="nav-item dropdown me-3">
                <a class="nav-link" id="navbarDropdownNotifications" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-bell"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        3
                    </span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownNotifications">
                    <li><a class="dropdown-item" href="#"><i class="bi bi-check-circle-fill text-success me-2"></i>Yeni etkinlik onaylandı</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-person-plus-fill text-primary me-2"></i>Yeni kullanıcı kaydoldu</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-calendar-event text-warning me-2"></i>Yaklaşan etkinlik hatırlatması</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item text-center" href="#">Tüm Bildirimleri Gör</a></li>
                </ul>
            </li>
            
            <!-- User Account -->
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <div class="avatar-circle me-2">
                        <span class="avatar-initials">@(User.Identity?.Name?.Substring(0, 1) ?? "A")</span>
                    </div>
                    <span class="d-none d-lg-inline">@User.Identity?.Name</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Ayarlar</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Hesap</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-activity me-2"></i>Etkinlik Geçmişi</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap</button>
                        </form>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Genel</div>
                        <a class="nav-link" asp-controller="Admin" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="bi bi-speedometer2"></i></div>
                            Dashboard
                        </a>
                        <div class="sb-sidenav-menu-heading">Etkinlikler</div>
                        <a class="nav-link" asp-controller="Admin" asp-action="Events">
                            <div class="sb-nav-link-icon"><i class="bi bi-calendar-event"></i></div>
                            Etkinlik Yönetimi
                        </a>
                        <a class="nav-link" asp-controller="Event" asp-action="Create">
                            <div class="sb-nav-link-icon"><i class="bi bi-plus-circle"></i></div>
                            Yeni Etkinlik
                        </a>
                        <div class="sb-sidenav-menu-heading">Kullanıcılar</div>
                        <a class="nav-link" asp-controller="Admin" asp-action="Users">
                            <div class="sb-nav-link-icon"><i class="bi bi-people"></i></div>
                            Kullanıcı Yönetimi
                        </a>
                        <a class="nav-link" asp-controller="Admin" asp-action="Roles">
                            <div class="sb-nav-link-icon"><i class="bi bi-person-badge"></i></div>
                            Rol Yönetimi
                        </a>
                        <div class="sb-sidenav-menu-heading">Raporlar</div>
                        <a class="nav-link" href="#">
                            <div class="sb-nav-link-icon"><i class="bi bi-bar-chart"></i></div>
                            İstatistikler
                        </a>
                        <a class="nav-link" href="#">
                            <div class="sb-nav-link-icon"><i class="bi bi-file-earmark-text"></i></div>
                            Raporlar
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Giriş yapan:</div>
                    @User.Identity?.Name
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                
                @RenderBody()
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Etkinlik Yönetimi @DateTime.Now.Year</div>
                        <div>
                            <a href="#">Gizlilik Politikası</a>
                            &middot;
                            <a href="#">Kullanım Şartları</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.4/datatables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Sidebar toggle
        window.addEventListener('DOMContentLoaded', event => {
            const sidebarToggle = document.body.querySelector('#sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', event => {
                    event.preventDefault();
                    document.body.classList.toggle('sb-sidenav-toggled');
                    localStorage.setItem('sb|sidebar-toggle', document.body.classList.contains('sb-sidenav-toggled'));
                });
            }
            
            // Dark mode toggle
            const darkModeToggle = document.getElementById('darkModeToggle');
            
            // Check for saved dark mode preference or use system preference
            const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
            const savedMode = localStorage.getItem('darkMode') === 'true';
            
            // Apply dark mode if saved or system prefers dark
            if (savedMode || (prefersDark && savedMode !== false)) {
                document.body.classList.add('dark-mode');
                darkModeToggle.checked = true;
            }
            
            // Add dark mode toggle listener
            darkModeToggle.addEventListener('change', () => {
                if (darkModeToggle.checked) {
                    document.body.classList.add('dark-mode');
                    localStorage.setItem('darkMode', 'true');
                } else {
                    document.body.classList.remove('dark-mode');
                    localStorage.setItem('darkMode', 'false');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 