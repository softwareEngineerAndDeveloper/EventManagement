@model List<EventManagement.UI.DTOs.EventDto>
@using EventManagement.UI.DTOs
@using EventManagement.Domain.Entities
@{
    ViewData["Title"] = "Etkinlik Yöneticisi Paneli";
}

@* Anti-forgery token *@
@Html.AntiForgeryToken()

<div class="container-fluid px-4">
    <h1 class="mt-4 mb-4">Etkinlik Yönetim Paneli</h1>
    
    <div class="row">
        <!-- İstatistik Kartları -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">Toplam Etkinlikler</h5>
                            <h2 class="mb-0 mt-2">@(Model?.Count ?? 0)</h2>
                        </div>
                        <div class="rounded-circle bg-primary-light p-3">
                            <i class="bi bi-calendar-event fs-1"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Admin" asp-action="Events">Detayları Görüntüle</a>
                    <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">Aktif Etkinlikler</h5>
                            <h2 class="mb-0 mt-2">@(Model?.Count(e => e.IsActive && !e.IsCancelled) ?? 0)</h2>
                        </div>
                        <div class="rounded-circle bg-success-light p-3">
                            <i class="bi bi-check-circle fs-1"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Admin" asp-action="Events">Detayları Görüntüle</a>
                    <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">Yaklaşan Etkinlikler</h5>
                            <h2 class="mb-0 mt-2">@(Model?.Count(e => e.StartDate > DateTime.Now && !e.IsCancelled) ?? 0)</h2>
                        </div>
                        <div class="rounded-circle bg-warning-light p-3">
                            <i class="bi bi-calendar-week fs-1"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="#upcomingEventsSection">Detayları Görüntüle</a>
                    <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">İptal Edilenler</h5>
                            <h2 class="mb-0 mt-2">@(Model?.Count(e => e.IsCancelled) ?? 0)</h2>
                        </div>
                        <div class="rounded-circle bg-danger-light p-3">
                            <i class="bi bi-x-circle fs-1"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Admin" asp-action="Events">Detayları Görüntüle</a>
                    <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Yaklaşan Etkinlikler -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-calendar-event me-1"></i>
            Yaklaşan Etkinlikler
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any(e => e.StartDate > DateTime.Now && !e.IsCancelled))
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="upcomingEventsTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Başlangıç Tarihi</th>
                                <th>Bitiş Tarihi</th>
                                <th>Konum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var eventItem in Model.Where(e => e.StartDate > DateTime.Now && !e.IsCancelled))
                            {
                                <tr>
                                    <td>@eventItem.Title</td>
                                    <td>@eventItem.Description</td>
                                    <td>@eventItem.StartDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@eventItem.EndDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@eventItem.Location</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", "Event", new { id = eventItem.Id })" class="btn btn-info btn-sm">
                                                <i class="bi bi-info-circle"></i> Detaylar
                                            </a>
                                            <a href="@Url.Action("Edit", "Event", new { id = eventItem.Id })" class="btn btn-primary btn-sm mx-1">
                                                <i class="bi bi-pencil"></i> Düzenle
                                            </a>
                                            <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#participantsModal" data-event-id="@eventItem.Id" data-event-title="@eventItem.Title">
                                                <i class="bi bi-people"></i> Katılımcılar
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Yaklaşan etkinlik bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTable
            $('#pendingEventsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json',
                }
            });
            
            $('#upcomingEventsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json',
                }
            });
        });
    </script>
} 