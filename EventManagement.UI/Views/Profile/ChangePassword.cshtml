@model EventManagement.UI.Models.User.ChangePasswordViewModel
@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Hesap Ayarları /</span> Şifre Değiştir
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Şifre Değiştir</h5>
                <div class="card-body">
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="mb-3 form-password-toggle">
                            <label asp-for="CurrentPassword" class="form-label"></label>
                            <div class="input-group input-group-merge">
                                <input asp-for="CurrentPassword" type="password" class="form-control" />
                                <span class="input-group-text cursor-pointer">
                                    <i class="bx bx-hide"></i>
                                </span>
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-password-toggle">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <div class="input-group input-group-merge">
                                <input asp-for="NewPassword" type="password" class="form-control" />
                                <span class="input-group-text cursor-pointer">
                                    <i class="bx bx-hide"></i>
                                </span>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-password-toggle">
                            <label asp-for="ConfirmNewPassword" class="form-label"></label>
                            <div class="input-group input-group-merge">
                                <input asp-for="ConfirmNewPassword" type="password" class="form-control" />
                                <span class="input-group-text cursor-pointer">
                                    <i class="bx bx-hide"></i>
                                </span>
                            </div>
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>

                        <div class="mt-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Şifreyi Değiştir</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Profil'e Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Şifre göster/gizle özelliği için
        document.querySelectorAll('.form-password-toggle i').forEach(icon => {
            icon.addEventListener('click', e => {
                const input = e.target.closest('.input-group').querySelector('input');
                if (input.type === 'password') {
                    input.type = 'text';
                    e.target.classList.remove('bx-hide');
                    e.target.classList.add('bx-show');
                } else {
                    input.type = 'password';
                    e.target.classList.remove('bx-show');
                    e.target.classList.add('bx-hide');
                }
            });
        });
    </script>
} 