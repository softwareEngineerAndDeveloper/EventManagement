@model List<EventManagement.UI.DTOs.EventDto>
@using EventManagement.UI.DTOs
@using EventManagement.Domain.Entities
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 mb-4">Yönetim Paneli</h1>
    
    <div class="row">
        <!-- İstatistik Kartları -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">Toplam Etkinlikler</h5>
                            <h2 class="mb-0 mt-2">@(Model?.Count ?? 0)</h2>
                        </div>
                        <div class="rounded-circle bg-primary-light p-3">
                            <i class="bi bi-calendar-event fs-1"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Admin" asp-action="Events">Detayları Görüntüle</a>
                    <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">Aktif Etkinlikler</h5>
                            <h2 class="mb-0 mt-2">@(Model?.Count(e => e.IsActive && !e.IsCancelled) ?? 0)</h2>
                        </div>
                        <div class="rounded-circle bg-success-light p-3">
                            <i class="bi bi-check-circle fs-1"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Admin" asp-action="Events">Detayları Görüntüle</a>
                    <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">İptal Edilenler</h5>
                            <h2 class="mb-0 mt-2">@(Model?.Count(e => e.IsCancelled) ?? 0)</h2>
                        </div>
                        <div class="rounded-circle bg-danger-light p-3">
                            <i class="bi bi-x-circle fs-1"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Admin" asp-action="Events">Detayları Görüntüle</a>
                    <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTables için Türkçe dil desteği
            $('#activeEventsTable, #pendingEventsTable, #upcomingEventsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json',
                }
            });
        });
    </script>
} 