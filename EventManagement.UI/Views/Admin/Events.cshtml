@model List<EventManagement.UI.DTOs.EventDto>
@using EventManagement.Domain.Entities
@using EventManagement.UI.DTOs
@{
    ViewData["Title"] = "Etkinlik Yönetimi";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 mb-4">Etkinlik Yönetimi</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Tüm Etkinlikler</h6>
            <a asp-controller="Event" asp-action="Create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Yeni Etkinlik Ekle
            </a>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="eventsTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Başlangıç Tarihi</th>
                                <th>Bitiş Tarihi</th>
                                <th>Konum</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var eventItem in Model)
                            {
                                <tr>
                                    <td>@eventItem.Title</td>
                                    <td>@eventItem.Description</td>
                                    <td>@eventItem.StartDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@eventItem.EndDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@eventItem.Location</td>
                                    <td>
                                        @switch (eventItem.Status)
                                        {
                                            case EventManagement.Domain.Entities.EventStatus.Pending:
                                                <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                                                break;
                                            case EventStatus.Approved:
                                                <span class="badge bg-success">Onaylandı</span>
                                                break;
                                            case EventStatus.Rejected:
                                                <span class="badge bg-danger">Reddedildi</span>
                                                break;
                                            case EventStatus.Cancelled:
                                                <span class="badge bg-secondary">İptal Edildi</span>
                                                break;
                                            default:
                                                <span class="badge bg-info">Belirsiz</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Event" asp-action="Edit" asp-route-id="@eventItem.Id" class="btn btn-primary btn-sm">
                                                <i class="bi bi-pencil"></i> Düzenle
                                            </a>
                                            <button type="button" class="btn btn-info btn-sm mx-1" data-bs-toggle="modal" data-bs-target="#participantsModal" data-event-id="@eventItem.Id" data-event-title="@eventItem.Title">
                                                <i class="bi bi-people"></i> Katılımcılar
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Henüz eklenmiş etkinlik bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>

@await Html.PartialAsync("_ParticipantModal")

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTable
            $('#eventsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json',
                }
            });
        });
    </script>
} 