@model List<EventManagement.UI.Models.UserViewModel>
@inject EventManagement.UI.Services.IRoleService RoleService
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "_AdminLayout";
    var roles = await RoleService.GetAllRolesAsync(Guid.Empty);
}

<div class="container-fluid">
    <h1 class="mt-4 mb-4">Kullanıcı Yönetimi</h1>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tüm Kullanıcılar</h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>E-posta</th>
                                <th>Telefon</th>
                                <th>Roller</th>
                                <th>Durum</th>
                                <th>Kayıt Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.FirstName</td>
                                    <td>@user.LastName</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>
                                        @if (user.Roles != null && user.Roles.Any())
                                        {
                                            @foreach (var role in user.Roles)
                                            {
                                                <span class="badge bg-primary me-1">@role.Name</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Rol atanmamış</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Pasif</span>
                                        }
                                    </td>
                                    <td>@user.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-primary btn-sm" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#assignRoleModal"
                                                    data-user-id="@user.Id"
                                                    data-user-name="@user.FirstName @user.LastName">
                                                <i class="bi bi-person-badge"></i> Rol Ata
                                            </button>
                                            
                                            @if (user.IsActive)
                                            {
                                                <form asp-action="DeactivateUser" method="post" class="ms-1">
                                                    <input type="hidden" name="id" value="@user.Id" />
                                                    <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Bu kullanıcıyı devre dışı bırakmak istediğinizden emin misiniz?')">
                                                        <i class="bi bi-person-x"></i> Pasife Al
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-action="ActivateUser" method="post" class="ms-1">
                                                    <input type="hidden" name="id" value="@user.Id" />
                                                    <button type="submit" class="btn btn-success btn-sm">
                                                        <i class="bi bi-person-check"></i> Aktifleştir
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Sistemde kayıtlı kullanıcı bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div>

<!-- Rol Atama Modal -->
<div class="modal fade" id="assignRoleModal" tabindex="-1" aria-labelledby="assignRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assignRoleModalLabel">Kullanıcıya Rol Ata</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="AssignRole" method="post" id="assignRoleForm">
                    <input type="hidden" id="userId" name="UserId">
                    <div class="mb-3">
                        <label for="userName" class="form-label">Kullanıcı</label>
                        <input type="text" class="form-control" id="userName" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="roleId" class="form-label">Rol</label>
                        <select class="form-select" id="roleId" name="RoleId" required>
                            <option value="">Rol seçin</option>
                            @foreach (var role in roles)
                            {
                                <option value="@role.Id">@role.Name</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="submit" form="assignRoleForm" class="btn btn-primary">Rol Ata</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTable
            $('#usersTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json',
                }
            });
            
            // Rol atama modalı açılınca
            $('#assignRoleModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var userId = button.data('user-id');
                var userName = button.data('user-name');
                var modal = $(this);
                
                modal.find('#userId').val(userId);
                modal.find('#userName').val(userName);
            });
        });
    </script>
} 